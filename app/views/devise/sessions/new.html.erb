<div class="auth">
  <div class="row">
    <div class="col s9">
      <h2>Log in</h2>
    </div>
    <div class="col s3 admin-demo">
      <span class="text-right">admin@admin.com:10111213</span>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="input-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="row">
      <div class="col s6">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>

      <div class="col s6 right-align">
        <div class="actions">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <%= t("auth.sign_in").capitalize %>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>