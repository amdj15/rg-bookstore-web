<p id="notice"><%= notice %></p>

<p>
  <strong><%= t(:title).capitalize %>:</strong>
  <%= @category.title %>
</p>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:title).capitalize %></th>
      <th><%= t(:description).capitalize %></th>
      <th><%= t(:books_in_stock).capitalize %></th>
    </tr>
  </thead>

  <tbody>
    <% @category.books.each do |book| %>
      <tr>
        <td><%= link_to book.title, [@category, book] %></td>
        <td><%= book.description %></td>
        <td><%= book.books_in_stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t(:back).capitalize, categories_path %>
