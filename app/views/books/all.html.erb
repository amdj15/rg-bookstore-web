<h1>Listing Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Books in stock</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, [book.category, book] %></td>
        <td><%= book.description %></td>
        <td><%= book.books_in_stock %></td>
        <td><%= link_to book.category.title, book.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>