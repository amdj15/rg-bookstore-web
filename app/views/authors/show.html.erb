<div class="row">
  <div class="col s12">
    <a href="<%= authors_path %>">
      <i class="zmdi zmdi-long-arrow-left"></i><%= t(:back).capitalize %>
    </a>
  </div>
</div>

<p id="notice"><%= notice %></p>

<% present @author do |author_presenter| %>
  <h2><%= author_presenter.fullname %></h2>

  <%= author_presenter.bio %>

  <h3><%= t(:books).capitalize %></h3>

  <table class="table">
    <thead>
      <tr>
        <th><%= t(:name).capitalize %></th>
        <th><%= t(:price).capitalize %></th>
      </tr>
    </thead>
    <tbody>
      <% author_presenter.books.each do |book| %>
        <tr>
          <% present book do |book_presenter| %>
          <td><%= book_presenter.link %></td>
          <td>$<%= book_presenter.price %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col s12">
      <h3>
        <%= t(:reviews).capitalize %>
        <%= author_presenter.add_review_btn %>
      </h3>
    </div>

    <div class="col s12">
      <% author_presenter.ratings.each do |rating| %>
        <div class="section">
          <% present rating do |rating_presenter| %>
            <div class="stars">
              <%= rating_presenter.stars %>
            </div>

            <div>
              <%= rating_presenter.review %>
              <%= rating_presenter.destroy_btn %>
            </div>
          <% end %>
        </div>
        <div class="divider"></div>
      <% end %>
    </div>
  </div>
<% end %>